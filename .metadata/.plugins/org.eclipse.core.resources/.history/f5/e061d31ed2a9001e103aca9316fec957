<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<script src="js/jquery.js"></script>
</head>
<script>
    $(function(){
        $.ajax({
        	url:"js/MOCK_DATA.json" //해당 경로로 클라이언트가 요청을 보낸다.
        	,dataType:"json"
        	,success:function(data){
        		if(data.length>0){ // data가 있으면
        			var tb = $("<table/>");
        			for(var i in data){
//         				json 객체로 받아 'id'값을 가져옴
        				var $id =data[i].id;	
        				var $first_name =data[i].first_name;	
        				var $last_name =data[i].last_name;	
        				var $email =data[i].email;	
        				var $gender =data[i].gender;
//         				테이블 tr요소 선택에서 td 요소에 내용을 붙인다.
//						한 행에 5가지의 row 값을 넣음
        				var row = $("<tr/>").append( 
        						$("<td/>").text($id)
        						,$("<td/>").text($first_name)
        						,$("<td/>").text($last_name)
        						,$("<td/>").text($email)
        						,$("<td/>").text($gender)
        						); 
//         						반복하면서 행의 값들이 table 태그 안에 들어감
        						tb.append(row);
        			}
//         			여기서는 tb안에 json 값들이 저장됨
        			$(".wrap").append(tb); // json 데이터를 wrap 클래스에 출력
        		}
        	}
//         	,error:function(){} 생략가능
        });
    });
</script>

</head>
<body>
	<div class="wrap"></div>
</body>
</html>